{
    "compileOnSave": true,
    "compilerOptions": {
        "listEmittedFiles": true,
        "outDir": "dist/js/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "strictNullChecks": true,
        "lib": [
            "dom",
            "es5",
            "es2015"
        ]
    },
    "files": [
        "node_modules/babylonjs/babylon.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/",
        "dist/",
        "**/*.spec.ts"
    ]
}
